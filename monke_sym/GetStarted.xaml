<Window x:Class="monke_sym.GetStarted"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:monke_sym"
        mc:Ignorable="d"
        Title="GetStarted" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Name your monkey" Margin="5"/>
        <TextBox Grid.Row="1" Name="MonkeyName" Margin="5"/>
        <Button Grid.Row="2" Click="Button_Click" Content="OK" Margin="5"/>
        <Label Grid.Row="3" Name="MyLabel" Margin="5"/>
    </Grid>
</Window>
